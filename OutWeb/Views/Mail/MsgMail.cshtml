@using OutWeb.Repositories
@model FormCollection
@{
    ViewBag.Title = "MsgMail";
    ViewBag.Website = "肽研生醫";
    Layout = null;
    string web_url = PublicMethodRepository.UrlMathPath;
    string tel = Model["tel"];
    string email = Model["email"];
    string cate = Model["category"];
    string gender = Model["gender"];
    string name = Model["Name"];
    string companyName = Model["CompanyName"];
    string content = @"<span style=""white-space:pre-line"">" + Model["contenttext"] + "</span>";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <title>【肽研生醫】資訊通知</title>
    <style>
        body {
            width: 100% !important;
            -webkit-text-size-adjust: 100%;
            -ms-text-size-adjust: 100%;
            margin: 0;
            padding: 0;
            background: #fff;
        }

        * {
            -webkit-font-smoothing: antialiased;
        }

        .ExternalClass * {
            line-height: 100%;
        }

        table td {
            border-collapse: collapse;
        }

        *[class].wlf {
            width: 600px;
        }

        *[class].w-280 {
            width: 280px;
        }

        *[class].w-200 {
            width: 200px;
        }

        *[class].w-150 {
            width: 150px;
        }

        *[class].w-130 {
            width: 130px;
        }

        *[class].w-120 {
            width: 120px;
        }

        *[class].w-30 {
            width: 30px;
        }
    </style>
</head>
<body style="font: .8em/140% '微軟正黑體', 'Microsoft JhengHei', Helvetica, sans-serif;">
    <table width="100%" bgcolor="#ffffff" border="0" cellspacing="0" cellpadding="0" style="table-layout:fixed">
        <tr>
            <td>

                <!--[if mso]><table width="600" border="0" cellspacing="0" cellpadding="0" align="center"><tr><td><![endif]-->

                <table class="wlf full-width" width="100%" border="0" cellspacing="0" cellpadding="0" align="center" style="margin:0 auto;max-width:600px">
                    <tr>
                        <td>
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td width="14%">&nbsp;</td>
                                    <td align="center" style="padding:12px 0">
                                        <a href="#" target="_blank" style="text-decoration: none;color: #1599A3">
                                            <img src=@(web_url + "/Content/images/logo-s.gif" ) width="74" style="border:none;width:35px;max-width:35px;max-height:65px;margin-right: 12px;vertical-align: middle;" />
                                            <h1 style="display: inline;margin-top: 24px;vertical-align: middle;">@ViewBag.Website</h1>
                                        </a>
                                    </td>
                                    <td width="14%">&nbsp;</td>
                                </tr>
                            </table>

                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="center" style="font-size:1px;line-height:1px"><img src="https://s3.amazonaws.com/rejoiner/generic/b/div.png" width="574" alt="@ViewBag.Website" style="display:block;width:100%;max-width:574px;max-height:8px" /></td>
                                </tr>
                                <tr>
                                    <td height="25">&nbsp;</td>
                                </tr>
                            </table>

                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td width="10%">&nbsp;</td>
                                    <td>
                                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                            <tr>
                                                <td style="text-align: right;color:#005081;font-size:22px;font-weight:bold;line-height:34px;width: 20%;">類&emsp;&emsp;別</td>
                                                <td style="width: 7%"></td>
                                                <td style="color:#000001;font-size:18px;line-height:24px">
                                                    @cate
                                                </td>
                                            </tr>
                                            <tr><td height="25">&nbsp;</td></tr>

                                            <tr>
                                                <td style="text-align: right;color:#005081;font-size:22px;font-weight:bold;line-height:34px;width: 20%;">公司名稱</td>
                                                <td style="width: 7%"></td>
                                                <td style="color:#000001;font-size:18px;line-height:24px">
                                                    @companyName
                                                </td>
                                            </tr>
                                            <tr><td height="25">&nbsp;</td></tr>

                                            <tr>
                                                <td style="text-align: right;color:#005081;font-size:22px;font-weight:bold;line-height:34px;width: 20%;">姓&emsp;&emsp;名</td>
                                                <td style="width: 7%"></td>
                                                <td style="color:#000001;font-size:18px;line-height:24px">
                                                    @name<span>@gender</span>
                                                </td>
                                            </tr>
                                            <tr><td height="25">&nbsp;</td></tr>
                                            
                                            <tr>
                                                <td style="text-align: right;color:#005081;font-size:22px;font-weight:bold;line-height:34px;width: 20%;">連絡電話</td>
                                                <td style="width: 7%"></td>
                                                <td style="color:#000001;font-size:18px;line-height:24px">
                                                    @tel
                                                </td>
                                            </tr>
                                            <tr><td height="25">&nbsp;</td></tr>

                                            <tr>
                                                <td style="text-align: right;color:#005081;font-size:22px;font-weight:bold;line-height:34px;width: 20%;">電子信箱</td>
                                                <td style="width: 7%"></td>
                                                <td style="color:#000001;font-size:18px;line-height:24px">
                                                    @email
                                                </td>
                                            </tr>
                                            <tr><td height="50">&nbsp;</td></tr>

                                            <tr>
                                                <td colspan="3" style="color:#005081;font-size:30px;font-weight:bold;line-height:34px">訊息通知</td>
                                            </tr>
                                            <tr><td height="25">&nbsp;</td></tr>
                                            <tr>
                                                <td colspan="3" style="color:#000001;font-size:18px;line-height:24px">
                                                    @Html.Raw(content)
                                                </td>
                                            </tr>
                                            <tr><td height="25">&nbsp;</td></tr>

                                        </table>
                                    </td>
                                    <td width="10%">&nbsp;</td>
                                </tr>
                            </table>

                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="center" style="font-size:1px;line-height:1px"><img src="https://s3.amazonaws.com/rejoiner/generic/b/div.png" width="574" alt="" style="display:block;width:100%;max-width:574px;max-height:8px" /></td>
                                </tr>
                                <tr>
                                    <td height="15">&nbsp;</td>
                                </tr>
                            </table>

                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td width="5%">&nbsp;</td>
                                    <td>
                                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                            <tr>
                                                <td height="15" style="font-size:1px;line-height:1px">&nbsp;</td>
                                            </tr>
                                            <tr>
                                                <td align="center" style="color:#666666;font-family:Arial, sans-serif;font-size:11px;line-height:16px">Copyright &copy; 2018 @ViewBag.Website All Rights Reserved</td>
                                            </tr>
                                            <tr>
                                                <td height="20">&nbsp;</td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td width="5%">&nbsp;</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>

                <!--[if mso]></td></tr></table><![endif]-->

            </td>
        </tr>
    </table>
</body>
</html>